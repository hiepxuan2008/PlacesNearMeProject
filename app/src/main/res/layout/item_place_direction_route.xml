<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:id="@+id/ivDriving"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_driving_pressed"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/ivForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/forward_navigation"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivDriving"
        android:layout_toLeftOf="@id/ivForward"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtRouteName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Via Nguyễn Văn Cừ and An Dương Vương"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/txtRouteInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0.7 km 4 mins"
            android:textSize="14dp"
            android:textColor="@color/md_grey_400"
            />

    </LinearLayout>


</RelativeLayout>